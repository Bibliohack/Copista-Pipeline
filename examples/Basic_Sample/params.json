{
    "version": "2.0",
    "description": "Par√°metros guardados para los filtros del pipeline",
    "last_modified": "",
    "filter_params": {
        "resize": {
            "filter_name": "Resize",
            "params": {
                "mode": 0,
                "scale_percent": 50,
                "width": 640,
                "height": 480,
                "interpolation": 1
            }
        },
        "contrast": {
            "filter_name": "BrightnessContrast",
            "params": {
                "brightness": 0,
                "contrast": 100
            }
        },
        "gray": {
            "filter_name": "Grayscale",
            "params": {
                "method": 0,
                "weight_r": 30,
                "weight_g": 59,
                "weight_b": 11
            }
        },
        "blur": {
            "filter_name": "GaussianBlur",
            "params": {
                "kernel_size": 5,
                "sigma": 0
            }
        },
        "canny": {
            "filter_name": "CannyEdge",
            "params": {
                "threshold1": 50,
                "threshold2": 150,
                "aperture_size": 3,
                "l2_gradient": 0
            }
        },
        "hough": {
            "filter_name": "HoughLines",
            "params": {
                "method": 1,
                "rho": 1,
                "theta_divisor": 180,
                "threshold": 100,
                "min_line_length": 50,
                "max_line_gap": 10
            }
        },
        "show_lines": {
            "filter_name": "OverlayLines",
            "params": {
                "color_preset": 0,
                "line_thickness": 2,
                "alpha": 100
            }
        }
    }
}
